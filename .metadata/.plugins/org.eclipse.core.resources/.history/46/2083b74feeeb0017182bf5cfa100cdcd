#include <avr/io.h>
#include <util/delay.h>

int main(void){

	DDRC = 0x0f;
	PORTC = 0x00;
	unsigned int flag = 1;
	while(1)
	{

		if(PINB & (1<<PB0)){
			_delay_ms(30);
			if(PINB & (1<<PB0)){
				if(flag == 1){
				flag = 0;
				PORTC++;
				}
			}
		}
		else{
			flag = 1;
		}

		if(PINB & (1<<PB1)){
			_delay_ms(30);
			if(PINB & (1<<PB1)){
				if(flag == 1){
				flag = 0;
				PORTC--;
				}
			}
		}
		else{
			flag = 1;
		}
	}

	return 0;
}
