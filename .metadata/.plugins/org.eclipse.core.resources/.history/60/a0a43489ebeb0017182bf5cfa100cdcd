#include <avr/io.h>
#include <util/delay.h>

int main(void){

	DDRC |= (1<<PC0)|(1<<PC1);
	PORTC &= (~((1<<PC0)|(1<<PC1)));
	while(1)
	{
		if(PINB & (1<<PB0)){
			_delay_ms(30);
			if(PINB & (1<<PB0)){
				PORTC |= (1<<PC0);
			}
		}
		if(PINB & (1<<PB1)){
			_delay_ms(30);
			if(PINB & (1<<PB1)){
				PORTC |= (1<<PC1);
			}
		}
	}

	return 0;
}
